{
    "name": "matomecrypto/app",
    "description": "MatomeCrypto Application",
    "type": "project",
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.3",
        "firebase/php-jwt": "^6.4",
        "guzzlehttp/guzzle": "^7.5",
        "phpmailer/phpmailer": "^6.8",
        "predis/predis": "^2.1",
        "symfony/var-dumper": "^6.2",
        "symfony/console": "^6.2",
        "symfony/http-foundation": "^6.2",
        "symfony/routing": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.20",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 